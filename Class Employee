package tugas9no2;

/**
 *
 * @author FARIZ
 */
public class Employee extends Person {
   protected String kantor;
    protected double gaji;
    protected MyDate tanggalSewa;

    public Employee(String nama, String alamat, String noHp, String email, String kantor, double gaji, MyDate tanggalSewa) {
        super(nama, alamat, noHp, email);
        this.kantor = kantor;
        this.gaji = gaji;
        this.tanggalSewa = tanggalSewa;
    }

    public String toString() {
        return "Pegawai: " + nama + " - Kantor: " + kantor + " - Gaji: " + gaji + " - Tanggal Sewa: " + tanggalSewa;
    }
}
